<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/transparent_blue_pressed" />
            <corners
                android:radius="5dp" />
           	<padding 
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
           	<stroke 
           	    android:width="5dp"
           	    android:color="#0fff" />
        </shape>
    </item>
    
    <item>
        <shape>
            <solid
                android:color="@color/transparent_blue_normal" />
            <corners
                android:radius="5dp" />
           	<padding 
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
           	<stroke 
           	    android:width="5dp"
           	    android:color="#0fff" />
        </shape>
    </item>

</selector>