<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/activity_main_topbar_layout"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        layout="@layout/topbar_main"/>

    <Button
        android:id="@+id/main_activity_show_gallery_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_main_topbar_layout"
        android:text="Show me the gallery"/>

    <include
        android:id="@+id/main_activity_new_memory_button"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        layout="@layout/add_new_memory_button_layout"/>

</RelativeLayout>
