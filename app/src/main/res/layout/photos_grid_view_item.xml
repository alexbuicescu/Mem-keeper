<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp" >

    <ImageView
        android:id="@+id/photos_grid_view_thumbnail_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher"/>

    <ImageView
        android:id="@+id/photos_grid_view_selected_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/small_horizontal_padding"
        android:layout_marginTop="@dimen/small_horizontal_padding"
        android:padding="@dimen/small_horizontal_padding"
        android:background="@color/white"
        android:src="@drawable/ic_action_accept"/>

</RelativeLayout>