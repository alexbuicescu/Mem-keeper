<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EDEDED"
            android:padding="10dip" >

            <!-- View Title Label -->

            <Button
                android:id="@+id/menu_currentSelection_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="10dip"
                android:background="@drawable/operatorbutton"
                android:drawableRight="@drawable/righticon"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:text="Memory lane"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
            <Button
                android:id="@+id/menu_friendsTitle_button"
                android:layout_width="fill_parent"
                android:layout_height="34dip"
                android:layout_below="@id/menu_currentSelection_button"
                android:layout_marginTop="4dip"
                android:background="#222222"
                android:gravity="center_vertical|left"
                android:paddingLeft="30dip"
                android:text="Friends"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/menu_see_your_friends_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/menu_friendsTitle_button"
                android:background="@android:color/transparent"
                android:gravity="center_vertical|left"
                android:paddingLeft="30dip"
                android:text="See your friends"
                android:textColor="@android:color/darker_gray" />

            <Button
                android:id="@+id/menu_yearsTitle_button"
                android:layout_width="fill_parent"
                android:layout_height="34dip"
                android:layout_below="@id/menu_see_your_friends_button"
                android:background="#222222"
                android:gravity="center_vertical|left"
                android:paddingLeft="30dip"
                android:text="Years"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/menu_years_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/menu_yearsTitle_button"
                android:orientation="vertical">
                <Button
                    android:id="@+id/yearButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="2015"
                    android:paddingLeft="30dip"
                    android:gravity="center_vertical|left"
                    android:textColor="@android:color/darker_gray"
                    android:visibility="visible"/>
            </LinearLayout>

            <Button
                android:id="@+id/menu_settings_button"
                android:layout_width="28dip"
                android:layout_height="28dip"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/settings" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>